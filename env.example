# Genie Backend Environment Variables
# Copy this file to .env and fill in your actual values

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Flask Configuration
FLASK_ENV=production
FLASK_APP=web_server.py
SECRET_KEY=your_secret_key_here

# Database Configuration (if using database instead of JSON)
# DATABASE_URL=postgresql://user:password@localhost:5432/genie_db
# MONGODB_URL=mongodb://localhost:27017/genie_db

# Google Calendar API (files should be placed in project root)
# credentials.json - Download from Google Cloud Console
# token.json - Will be created automatically after first auth

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=genie_production.log

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090
